---
export interface Props {
  href: string;
  text: string;
}

const { text, href } = Astro.props;
---

<li
  class="
    w-64 p-1 bg-zinc-300 rounded-md
    shadow transition-colors
    hover:bg-blue-700 hover:text-white
  "
>
  <a
    href={href}
    target="_blank"
    class="p-4 block"
  >
    {text}
  </a>
</li>
