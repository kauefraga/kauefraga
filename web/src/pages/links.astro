---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import SocialIcon from '../components/SocialIcon.astro';
import Item from '../components/lists/Item.astro';

---

<Layout title="Links | Kauê Fraga Rodrigues">
  <Container>
    <header class="w-44 h-44">
      <img
        class="rounded-full"
        width="160"
        height="160"
        src="https://github.com/kauefraga.png"
        alt="Kauê's Profile Image"
      />
    </header>

    <section class="flex flex-col items-center gap-1 my-1">
      <h1 class="text-xl md:text-3xl font-bold">Kauê Fraga Rodrigues</h1>
      <h2 class="text-lg md:text-1xl">Software Developer</h2>
    </section>

    <ul class="flex flex-col my-4 gap-3">
      <Item
        href="https://github.com/kauefraga?tab=repositories&q=learning"
        text="📚 Learning Repositories"
      />
      <Item
        href="https://github.com/kauefraga/ping-pong"
        text="🏓 Ping Pong"
      />
      <Item
        href="https://github.com/kauefraga/crud-library"
        text="😎 CRUD Library"
      />
      <Item
        href="https://github.com/kauefraga/todo-list-nextjs"
        text="📋 To Do List"
      />
      <Item
        href="https://github.com/kauefraga/quicky-server"
        text="⚡ Quicky Server"
      />
    </ul>

    <div class="my-4">
      <nav id="contact" class="flex gap-3">
        <SocialIcon
          url="https://twitter.com/__kauefraga"
          name="ri:twitter-fill"
        />
        <SocialIcon
          url="https://www.linkedin.com/in/kauefraga"
          name="ri:linkedin-fill"
        />
        <SocialIcon
          url="https://github.com/kauefraga"
          name="grommet-icons:github"
        />
        <SocialIcon
          url="mailto:kauefragarodrigues456@gmail.com"
          name="ic:round-email"
        />
      </nav>
    </div>
  </Container>
</Layout>
