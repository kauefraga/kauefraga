---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import SocialIcon from '../components/SocialIcon.astro';
import Item from '../components/lists/Item.astro';

---

<Layout title="Links | Kauê Fraga Rodrigues">
  <Container>
    <div class="w-44 h-44">
      <img
        class="rounded-full"
        width="184"
        height="184"
        src="/icon.webp"
        alt="Kauê's Profile Image"
      />
    </div>

    <h1 class="my-2 text-xl md:text-3xl font-bold">Kauê Fraga Rodrigues</h1>

    <ul>
      <Item href="https://github.com/kauefraga?tab=repositories&q=learning" text="📚  Learning Repositories" />
      <Item href="https://github.com/kauefraga/ping-pong" text="🏓 Ping Pong" />
      <Item href="https://github.com/kauefraga/crud-library" text="😎 CRUD Library" />
      <Item href="https://github.com/kauefraga/todo-list-nextjs" text="📋 To Do List" />
      <Item href="https://github.com/kauefraga/quicky-server" text="⚡ Quicky Server" />
    </ul>
  </Container>

  <footer class="flex flex-col items-center bottom-0 left-0 w-full text-black">
    <nav id="contact" class="flex mt-4 space-x-4">
      <SocialIcon
        url="https://twitter.com/__kauefraga"
        name="ri:twitter-fill"
      />
      <SocialIcon
        url="https://www.linkedin.com/in/kauefraga"
        name="ri:linkedin-fill"
      />
      <SocialIcon
        url="https://github.com/kauefraga"
        name="grommet-icons:github"
      />
      <SocialIcon
        url="mailto:kauefragarodrigues456@gmail.com"
        name="ic:round-email"
      />
    </nav>
  </footer>
</Layout>
